{
  "info": {
    "name": "Database Seeder",
    "description": "Endpoints for seeding the IronFit database with test data",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Seed Database - Custom Quantity",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/seeder/seed?quantity=1000",
          "host": ["{{base_url}}"],
          "path": ["api", "seeder", "seed"],
          "query": [
            {
              "key": "quantity",
              "value": "1000",
              "description": "Number of records per entity (1-10000)"
            }
          ]
        },
        "description": "Seeds the database with a custom number of records per entity. Requires AUDITOR role."
      },
      "response": []
    },
    {
      "name": "Seed Database - Small (100)",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/seeder/seed/small",
          "host": ["{{base_url}}"],
          "path": ["api", "seeder", "seed", "small"]
        },
        "description": "Seeds the database with 100 records per entity. Good for quick tests."
      },
      "response": []
    },
    {
      "name": "Seed Database - Medium (500)",
      "request": {
